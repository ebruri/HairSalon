@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h2>Edit Client Infromation</h2>
<h4>Edit this client: @Html.DisplayFor(model => model.ClientName)</h4>
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ClientId)

  @Html.LabelFor(model => model.ClientName)
  @Html.TextBoxFor(model => model.ClientName)

  @Html.LabelFor(model => model.Phone)
  @Html.TextBoxFor(model => model.Phone)

  @Html.LabelFor(model => model.Address)
  @Html.TextBoxFor(model => model.Address)
  
  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")
  
  <button type="submit" value="save" class="btn btn-primary" style="width:250px">Edit Client</button>
}
<p>@Html.ActionLink("Back to list", "Index")</p>